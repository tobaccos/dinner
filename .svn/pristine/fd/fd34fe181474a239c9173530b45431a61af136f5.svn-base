/* header*/
header .lt a {
  display: inline-block;
  width: 100%;
  height: 100%;
  background: url(../img/business/logo.png) no-repeat 0.375rem center;
  background-size: 0.97222222rem;
}
/*content*/
.content .mp {
  margin-top: 0.30555556rem;
}
.content .mb {
  margin-bottom: 0.41666667rem;
}
.content .conttent_box {
  padding: 0.22222222rem;
  width: 8.94444444rem;
  border-left: 1px solid #e1e1e1;
  border-top: 1px solid #e1e1e1;
  border-right: 1px solid #e1e1e1;
  overflow: hidden;
  background: #fff;
}
.content .conttent_box h3 {
  font-size: 0.41666667rem;
  color: #000000;
}
.content .conttent_box h4 {
  font-size: 0.34722222rem;
  color: #f2bd47;
}
.content .conttent_box p {
  clear: both;
  font-size: 0.34722222rem;
  line-height: 0.75rem;
}
.content .conttent_box i {
  float: right;
  font-style: normal;
  height: 0.75rem;
}
.content .pingl {
  height: 0.77777778rem;
  background: url(../img/business/allbgs.png) no-repeat 0 0.166667rem;
  background-size: 2.43055556rem;
}
.content .pingl span {
  display: inline-block;
  width: 1.94444444rem;
  height: 0.77777778rem;
  background: url(../img/business/allbgs.png) no-repeat 0 -0.533333rem;
  background-size: 2.43055556rem;
}
.content .img img {
  width: 2.08333333rem;
  border-right: 16px solid #fff;
}
.content .img i {
  height: 1.38888889rem;
  line-height: 1.38888889rem;
}
.content .tele {
  background: url(../img/business/tel.png) no-repeat 0 0.16666667rem;
  background-size: 0.625rem;
  text-indent: 0.75rem;
}
.content .drass {
  background: url(../img/business/loading_city.png) no-repeat 0 0.16666667rem;
  background-size: 0.625rem;
  text-indent: 0.75rem;
}
.content .tjcp {
  width: 9.72222222rem;
}
.content .tjcp img {
  width: 3.33333333rem;
  border-right: 16px solid #fff;
}
/*footer*/
footer {
  text-align: center;
  line-height: 1.48611111rem;
}
footer a {
  float: left;
  text-align: center;
  display: inline-block;
}
footer a:first-child {
  width: 1.38888889rem;
  height: 100%;
  background: url(../img/business/xx_02.png) no-repeat 0 center;
  background-size: 1.41666667rem;
}
footer a:nth-child(2) {
  margin-top: 0.27777778rem;
  width: 7.13888889rem;
  height: 1.18055556rem;
  line-height: 1.19444444rem;
  background: #f2bd47;
  color: #fff;
  border-radius: 0.59722222rem;
  font-size: 0.48611111rem;
}
footer a:last-child {
  width: 1.38888889rem;
  height: 100%;
  background: url(../img/business/share.png) no-repeat 0.35555556rem center;
  background-size: 0.83333333rem;
}
